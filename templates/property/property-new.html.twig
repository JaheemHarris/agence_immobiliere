{% extends 'base.html.twig' %}

{% block title %}Property List{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Add new property</h1>

    <form method="POST" action="{{ path('app_property_add') }}">
        <div class="row mb-3">
          <label for="title" class="col-sm-2 col-form-label">Title</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="title" name="title">
          </div>
        </div>
        <div class="row mb-3">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-8">
              <textarea class="form-control" name="description" id="description"></textarea>
            </div>
        </div>
        <div class="row mb-3">
            <label for="location" class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="location" name="location">
            </div>
        </div>
        <div class="row mb-3">
            <label for="rooms" class="col-sm-2 col-form-label">Rooms</label>
            <div class="col-sm-4">
              <input type="number" class="form-control" id="rooms" name="rooms">
            </div>
        </div>
        <div class="row mb-3">
            <label for="surface" class="col-sm-2 col-form-label">Surface</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="surface" name="surface">
            </div>
        </div>
        <div class="row mb-3">
            <label for="price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="price" name="price">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
{% endblock %}
